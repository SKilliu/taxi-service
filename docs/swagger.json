            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "test@example.com"
                },
                "password": {
                    "type": "string",
                    "example": "qwerty1234"
                }
            }
        },
        "SignUpReq": {
            "type": "object",
            "properties": {
                "account_type": {
                    "type": "string",
                    "example": "client"
                },
                "email": {
                    "type": "string",
                    "example": "test@example.com"
                },
                "name": {
                    "type": "string",
                    "example": "TestName"
                },
                "password": {
                    "type": "string",
                    "example": "qwerty1234"
                }
